<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/view_splash</item>
    </style>

    <style name="Theme.AppOverviewNext" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.AppOverviewClose" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.IconBack" parent="Widget.AppCompat.TextView">
        <item name="android:layout_margin">9dp</item>
    </style>

    <style name="Theme.ConfirmAccount" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|right</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingRight">140dp</item>
    </style>

    <style name="Theme.BottomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Theme.LoginByPhone" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="backgroundTint">@color/green</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="Theme.TextColor" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="Theme.EffectClick" parent="Widget.AppCompat.TextView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.FontTextColor" parent="Widget.AppCompat.TextView">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="Theme.FontText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="Theme.UserNamePassword" parent="Widget.AppCompat.EditText">
        <item name="drawableTint">@color/grey</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">@null</item>
    </style>


</resources>