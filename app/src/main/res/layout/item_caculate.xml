<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/max_width"
    android:layout_height="@dimen/size_largee">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_small"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvItemCaculate"
            style="@style/Theme.ClickState"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_lar"
            android:gravity="center" />

        <ImageView
            android:id="@+id/ivBackKeyboard"
            android:layout_width="@dimen/height_largee"
            android:layout_height="@dimen/size_larg"
            android:layout_gravity="center"
            android:src="@drawable/ic_back_keyboard"
            android:visibility="gone" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>